@model TollCalc.Models.Vehicle

@{
    ViewData["Title"] = "Calculate";
}

<h1>Calculate M50 Toll Charge</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DropDownListFor(x => Model.Toll, new SelectList(Model.VeList, "Value", "Text"), htmlAttributes: new { @class = "form-control", Model.Type })
                
                <p></p>I have a tag: @Html.CheckBoxFor(m => m.HasTag)<p></p>
                
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
        <p></p>
        @ViewBag.Charge
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
